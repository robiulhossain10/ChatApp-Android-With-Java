<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Glow Circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#B37F00FF"/> <!-- Glow color (semi-transparent purple) -->
            <size android:width="140dp" android:height="140dp"/>
            <corners android:radius="70dp"/>
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>

    <!-- Inner Transparent Circle -->
    <item android:top="6dp" android:left="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="oval">
            <solid android:color="#00FFFFFF"/> <!-- Fully transparent -->
        </shape>
    </item>

</layer-list>
